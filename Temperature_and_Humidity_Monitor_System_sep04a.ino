void LED01Change()  {
  if(lED01 == HIGH){
    digitalWrite(2,HIGH);
  }
  else{
    digitalWrite(2,LOW);
  }
}

void DHT_SENSOR_READ(){
  float t = dht.readTemperature();
  temperature = t;
  float h = dht.readHumidity();
  humidity = h;
  Serial.print("Temperature: "); Serial.println(t);
  Serial.print("Humidity: "); Serial.println(h);
  delay(500);
}

void DOOR_SENSOR_READ(){
  if(digitalRead(DoorSensor)==LOW){
    door = LOW;
    Serial.println("Door Closed");
  }
  else{
    door = HIGH;
    Serial.println("Door Opened");
  }
}

void FLAME_SENSOR_READ(){
  int flame_value = analogRead(FlameSensor);
  flame_value = map(flame_value, 0, 4095, 0, 180);
  flame = flame_value;
  Serial.print("Flame : ");
  Serial.println(flame);
  delay(500);
}

void loop() {
  ArduinoCloud.update();
  // Your code here 
  DHT_SENSOR_READ();
  DOOR_SENSOR_READ();
  FLAME_SENSOR_READ();
